<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="25dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="25dp"
        android:layout_marginHorizontal="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView152"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/deleteAccount"
                android:fontFamily="@font/inter_18pt_bold"
                android:textColor="@color/blackBoldLetters"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView150"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/thisActionCanNotBeUndone"
                android:textAlignment="center"
                android:fontFamily="@font/inter_18pt_medium"
                android:textColor="@color/lightGreyLetters"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/deleteAccBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="10dp"
                android:text="@string/delete"
                android:textSize="17sp"
                android:textAllCaps="false"
                android:textColor="@color/whiteBoldLetters"
                android:fontFamily="@font/inter_18pt_bold"
                android:background="@drawable/large_btn"
                android:backgroundTint="@color/light_red_cancel_order"/>

            <Button
                android:id="@+id/cancelAccDeleteBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:textColor="@color/whiteBoldLetters"
                android:fontFamily="@font/inter_18pt_bold"
                android:background="@drawable/large_btn"
                android:backgroundTint="@color/lightGreyLetters"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>