<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".adminUserOrdersList">

    <include
        android:id="@+id/adminUserOrderList"
        layout="@layout/sidebartoolbaradmin"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/greyBg"
        app:layout_constraintTop_toBottomOf="@id/adminUserOrderList"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView42"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/orders"
                        android:textColor="@color/blackBoldLetters"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/textView68"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|center_vertical"
                        android:text="@string/deleteAll"
                        android:textColor="@color/maroon_cancelBtn"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="5dp"
                    android:background="@color/white"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="15dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/imageView31"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                app:srcCompat="@drawable/chickenkaraagemeal" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView236"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/customerName"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/inter_18pt_regular"/>

                                <TextView
                                    android:id="@+id/customerName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/sampleName"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:textColor="@color/greyLetters"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView244"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/adminContactNumber"
                                    android:textSize="13sp"
                                    android:textColor="@color/black"
                                    android:fontFamily="@font/inter_18pt_regular"/>

                                <TextView
                                    android:id="@+id/textView222"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="@string/sampleContact"
                                    android:textSize="13sp"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:textColor="@color/greyLetters" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView249"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:textSize="13sp"
                                    android:text="@string/meal"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/mealName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:textSize="13sp"
                                    android:text="@string/craftedMeal"
                                    android:textColor="@color/greyLetters" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/riceAddon"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:text="@string/whiteRice"
                                    android:textColor="@color/greyLetters"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/mainAddon"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:text="@string/chickenKaraage"
                                    android:textColor="@color/greyLetters"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/sideAddon"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:text="@string/coleSlaw"
                                    android:textColor="@color/greyLetters"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/sauceAddon"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:text="@string/gravy"
                                    android:textColor="@color/greyLetters"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/dessertAddon"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:text="@string/orderHisJapFruitCake"
                                    android:textColor="@color/greyLetters"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/drinkAddon"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:text="@string/water"
                                    android:textColor="@color/greyLetters"
                                    android:textSize="12sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:text="@string/mealQuantity"
                                    android:textSize="13sp"
                                    android:textColor="@color/blackBoldLetters" />

                                <TextView
                                    android:id="@+id/mealQuantity"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:text="@string/sampleQuantity"
                                    android:textSize="13sp"
                                    android:textColor="@color/greyLetters" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:text="@string/totalPrice"
                                    android:textSize="13sp"
                                    android:textColor="@color/blackBoldLetters" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:layout_marginEnd="2dp"
                                    android:text="@string/pesoSign"
                                    android:textSize="13sp"
                                    android:textColor="@color/greyLetters" />

                                <TextView
                                    android:id="@+id/totalPrice"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/inter_18pt_regular"
                                    android:text="@string/samplePrice"
                                    android:textSize="13sp"
                                    android:textColor="@color/greyLetters" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/deleteMealBtn"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="15dp"
                                android:text="@string/delete"
                                android:textColor="@color/maroon_cancelBtn"
                                android:fontFamily="@font/inter_18pt_regular"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <include
                layout="@layout/admin_footer"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>