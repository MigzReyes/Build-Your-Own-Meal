<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".home_dashboard">

    <!-- Wrap everything inside a LinearLayout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Banner -->
        <ImageView
            android:id="@+id/top_banner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:src="@drawable/maroon" />

        <!-- Image Background Section -->
        <LinearLayout
            android:id="@+id/image_background"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#725D1029"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start a pick up order"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ORDER" />

                <ImageView
                    android:id="@+id/bottom_banner"
                    android:layout_width="139dp"
                    android:layout_height="120dp"
                    android:layout_gravity="end"
                    android:scaleType="centerCrop"
                    android:src="@drawable/foods" />

            </LinearLayout>

        </LinearLayout>

        <!-- Log in Warning -->
        <LinearLayout
            android:id="@+id/login_warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A7FF0000"
            android:orientation="horizontal"
            android:padding="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:text="You are not signed in/logged in: "
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Log in" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:text="Sign up" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Header ng "MENU" and "VIEW ALL" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- MENU -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MENU"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:padding="10dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:gravity="start"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Spacer ng para ma push "VIEW ALL" button papunta sa right -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <!-- VIEW ALL eme eme kasama mga foods at pwede na ma scroll -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIEW ALL"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:gravity="end"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!--  Scrollable na yung menu -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <!-- Item 1 -->
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foods" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Burger"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingTop="5dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:backgroundTint="@color/black"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!-- Item 2 -->
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foods" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pizza"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingTop="5dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:backgroundTint="@color/black"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                    <!--  Item 3 -->
                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foods" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pasta"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:paddingTop="5dp" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Order"
                            android:textSize="14sp"
                            android:padding="5dp"
                            android:backgroundTint="@color/black"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
        <!-- HOTTEST DEALS Section (Vertical Layout) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Header for "Hottest Deals" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Hottest Deals Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HOTTEST DEALS"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:gravity="start"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- Spacer to Push "VIEW ALL" Button to the Right -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <!-- "VIEW ALL" Button for Hottest Deals -->
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VIEW ALL"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:gravity="end"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Scrollable Vertical List -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <!-- Deal 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foods" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cheesy Burger"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="start" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10% OFF/FOR STUDENT ONLY!"
                                android:textSize="14sp"
                                android:textColor="#D32F2F"
                                android:paddingBottom="5dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order"
                                android:textSize="14sp"
                                android:padding="5dp"
                                android:backgroundTint="#D32F2F"
                                android:textColor="@android:color/white"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Deal 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foods" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hatdog"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="start" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Buy 1 Get 1 Free!"
                                android:textSize="14sp"
                                android:textColor="#D32F2F"
                                android:paddingBottom="5dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order"
                                android:textSize="14sp"
                                android:padding="5dp"
                                android:backgroundTint="#D32F2F"
                                android:textColor="@android:color/white"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Deal 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="10dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/foods" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingStart="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Spaghetti Meal"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:gravity="start" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Only 50 peso!"
                                android:textSize="14sp"
                                android:textColor="#D32F2F"
                                android:paddingBottom="5dp" />

                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Order"
                                android:textSize="14sp"
                                android:padding="5dp"
                                android:backgroundTint="#D32F2F"
                                android:textColor="@android:color/white"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>


    </LinearLayout>

</ScrollView>
