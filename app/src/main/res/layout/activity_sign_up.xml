<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".signUp">

    <ImageView
        android:id="@+id/imageView18"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bentologinsignup" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView52"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp"
                    android:text="@string/CreateYourAccount"
                    android:textColor="@color/whiteBoldLetters"
                    android:textSize="30sp" />

                <LinearLayout
                    android:id="@+id/linearLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView58"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:text="@string/username"
                            android:textColor="@color/whiteBoldLetters"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:hint="@string/usernameHint"
                            android:inputType="text"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="15dp"
                            android:textColor="@color/blackBoldLetters"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView59"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:text="@string/email"
                            android:textColor="@color/whiteBoldLetters"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/signUpEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_background"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:hint="@string/emailHint"
                            android:inputType="textEmailAddress"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="15dp"
                            android:textColor="@color/blackBoldLetters"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView60"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:text="@string/password"
                            android:textColor="@color/whiteBoldLetters"
                            android:textSize="16sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleDrawable="@drawable/eye_icon">

                            <EditText
                                android:id="@+id/signUpPassword"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_text_background"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:hint="@string/passwordHint"
                                android:inputType="textPassword"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="15dp"
                                android:textColor="@color/blackBoldLetters"
                                android:textSize="15sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView61"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:text="@string/conPassword"
                            android:textColor="@color/whiteBoldLetters"
                            android:textSize="16sp" />


                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:hintEnabled="false"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleDrawable="@drawable/eye_icon">

                            <EditText
                                android:id="@+id/conPass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edit_text_background"
                                android:fontFamily="@font/inter_18pt_medium"
                                android:hint="@string/passwordHint"
                                android:inputType="textPassword"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="15dp"
                                android:textColor="@color/blackBoldLetters"
                                android:textSize="15sp" />

                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_18pt_semibold"
                            android:text="@string/passwordStrength"
                            android:textColor="@color/whiteBoldLetters"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/atLeastEightLetter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_18pt_semibold"
                                android:text="@string/atLeastEightCharacters"
                                android:textColor="@color/whiteBoldLetters" />

                            <TextView
                                android:id="@+id/atLeastOneUpperCaseLetter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_18pt_semibold"
                                android:text="@string/atLeastOneUppercaseLetter"
                                android:textColor="@color/whiteBoldLetters" />

                            <TextView
                                android:id="@+id/atLeastOneLowerCaseLetter"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_18pt_semibold"
                                android:text="@string/atLeastOneLowercaseLetter"
                                android:textColor="@color/whiteBoldLetters" />

                            <TextView
                                android:id="@+id/atLeastOneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_18pt_semibold"
                                android:text="@string/atLeastOneNumber"
                                android:textColor="@color/whiteBoldLetters" />
                        </LinearLayout>
                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/AgreeTermsAndCon"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginHorizontal="5dp"
                        android:layout_marginVertical="10dp"
                        android:layout_weight="1"
                        android:buttonTint="@color/whiteBoldLetters"
                        android:fontFamily="@font/inter_18pt_medium"
                        android:text="@string/agreeToTermsAndCondition"
                        android:textColor="@color/whiteBoldLetters"
                        android:textSize="15sp" />

                    <Button
                        android:id="@+id/signUpBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/large_btn_main_color"
                        android:fontFamily="@font/inter_18pt_bold"
                        android:text="@string/signUp"
                        android:textColor="@color/whiteBoldLetters"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/inter_18pt_medium"
                    android:text="@string/alreadyHaveAccount"
                    android:textColor="@color/whiteBoldLetters"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/alreadyHaveAcc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:fontFamily="@font/inter_18pt_bold"
                    android:text="@string/smallLogIn"
                    android:textColor="@color/main_color"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>