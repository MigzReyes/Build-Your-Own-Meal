                                    android:fontFamily="@font/inter_18pt_medium"
                                    android:textColor="@color/blackBoldLetters"/>

                                <TextView
                                    android:id="@+id/sidePrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
