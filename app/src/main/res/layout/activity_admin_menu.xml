                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/sauceImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/gravy" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/sauceName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:text="@string/gravy"
                                    android:fontFamily="@font/inter_18pt_medium"
                                    android:textColor="@color/blackBoldLetters"/>

                                <TextView
                                    android:id="@+id/saucePrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/samplePrice"
                                    android:fontFamily="@font/inter_18pt_medium"
                                    android:textColor="@color/blackBoldLetters"/>

                                <TextView
                                    android:id="@+id/sauceEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="15dp"
                                    android:layout_marginStart="20dp"
                                    android:text="@string/edit"
                                    android:fontFamily="@font/inter_18pt_medium"
                                    android:textColor="@color/blue"/>

                                <TextView
                                    android:id="@+id/sauceDelete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/delete"
                                    android:fontFamily="@font/inter_18pt_medium"
                                    android:textColor="@color/maroon_cancelBtn"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView227"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Dessert"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/blackBoldLetters"
                            android:fontFamily="@font/inter_18pt_black"
                            android:textSize="15sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="30dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:background="@android:color/transparent"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/dessertImg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@drawable/japanesefruitsandwich" />

                            </androidx.cardview.widget.CardView>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/dessertName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_weight="1"
                                    android:text="@string/japFruitSand"
                                    android:fontFamily="@font/inter_18pt_medium"
                                    android:textColor="@color/blackBoldLetters"/>

                                <TextView
                                    android:id="@+id/dessertPrice"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/samplePrice"
                                    android:fontFamily="@font/inter_18pt_medium"
                                    android:textColor="@color/blackBoldLetters"/>

                                <TextView
                                    android:id="@+id/dessertEdit"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="15dp"
                                    android:layout_marginStart="20dp"
                                    android:text="@string/edit"
                                    android:fontFamily="@font/inter_18pt_medium"
                                    android:textColor="@color/blue"/>

                                <TextView
                                    android:id="@+id/dessertDelete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/delete"
                                    android:fontFamily="@font/inter_18pt_medium"
                                    android:textColor="@color/maroon_cancelBtn"/>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="20dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="15dp"
                        android:layout_marginVertical="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView228"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/Juice"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/blackBoldLetters"
                            android:fontFamily="@font/inter_18pt_black"
                            android:textSize="15sp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="30dp"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:background="@android:color/transparent"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/drinkImg"
                                    android:layout_width="match_parent"
