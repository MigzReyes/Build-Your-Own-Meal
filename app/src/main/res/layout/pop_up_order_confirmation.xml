<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="25dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView157"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_18pt_bold"
                android:gravity="center_horizontal"
                android:text="@string/areYouSure"
                android:textColor="@color/blackBoldLetters"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/alertText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:textAlignment="center"
                android:text="@string/makeSureAllTheInformationIsCorrect"
                android:fontFamily="@font/inter_18pt_medium"
                android:textColor="@color/lightGreyLetters"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancelBtn"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="40dp"
                    android:text="@string/cancel"
                    android:textAllCaps="false"
                    android:background="@drawable/large_btn"
                    android:textColor="@color/whiteBoldLetters"/>

                <Button
                    android:id="@+id/proceedBtn"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:text="@string/proceed"
                    android:textAllCaps="false"
                    android:background="@drawable/large_btn"
                    android:backgroundTint="@color/price_green"
                    android:textColor="@color/whiteBoldLetters"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>