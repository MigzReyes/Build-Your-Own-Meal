<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/actContactUs"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".contactUs">

    <include
        android:id="@+id/toolbar"
        layout="@layout/sidebartoolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/grey"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView53"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/yourResponseIsImportantToUs"
            android:textSize="18sp"
            android:textColor="@color/lightGreyLetters"
            android:fontFamily="@font/inriasans_regular"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView123"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:text="@string/contactSupport"
                android:fontFamily="@font/inriasans_regular"
                android:textColor="@color/lightGreyLetters"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="20dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/contact_us_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/phoneicon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView142"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/contact"
                            android:fontFamily="@font/inriasans_regular"
                            android:textColor="@color/lightGreyLetters"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/textView141"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/phoneNumberCYF"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:textColor="@color/blackBoldLetters"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/emailicon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView144"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/emailAddress"
                            android:textSize="16sp"
                            android:fontFamily="@font/inriasans_regular"
                            android:textColor="@color/lightGreyLetters"/>

                        <TextView
                            android:id="@+id/textView143"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/emailCYF"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:textColor="@color/blackBoldLetters"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView125"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="15dp"
                android:text="@string/socialMedia"
                android:fontFamily="@font/inriasans_regular"
                android:textColor="@color/lightGreyLetters"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="20dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/contact_us_bg"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/facebookicon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView145"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/facebook"
                            android:fontFamily="@font/inriasans_regular"
                            android:textColor="@color/lightGreyLetters"
                            android:textSize="16sp"/>

                        <TextView
                            android:id="@+id/textView146"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/facebookCYF"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:textColor="@color/blackBoldLetters"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="31dp"
                        android:layout_height="42dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/instagramicon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView147"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/instagram"
                            android:textSize="16sp"
                            android:fontFamily="@font/inriasans_regular"
                            android:textColor="@color/lightGreyLetters"/>

                        <TextView
                            android:id="@+id/textView148"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/instagramCYF"
                            android:fontFamily="@font/inter_18pt_medium"
                            android:textColor="@color/blackBoldLetters"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>