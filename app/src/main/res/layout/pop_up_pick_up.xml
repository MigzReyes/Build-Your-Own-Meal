<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_dialog_bg"
    android:orientation="vertical">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/imageView26"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/progresslinegray" />


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView159"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pickUp"
            android:gravity="center_horizontal"
            android:fontFamily="@font/inter_18pt_bold"
            android:textColor="@color/blackBoldLetters"
            android:textSize="18sp"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/todayNumDay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                android:fontFamily="@font/inter_18pt_bold"
                                android:text="@string/sampleDay"
                                android:textColor="@color/lightGreyLetters"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/todayDay"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_18pt_bold"
                                android:text="@string/sampleMonth"
                                android:textColor="@color/lightGreyLetters"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/today"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:text="@string/today"
                            android:textSize="13sp"
                            android:textColor="@color/lightGreyLetters" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:layout_marginHorizontal="40dp"
                android:background="@drawable/bot_border_black"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="15dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tomorrowNumDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="4dp"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:text="@string/sampleDay"
                            android:textColor="@color/blackBoldLetters"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tomorrowMonth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:text="@string/sampleMonth"
                            android:textColor="@color/blackBoldLetters"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tomorrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:fontFamily="@font/inter_18pt_bold"
                        android:text="@string/tomorrow"
                        android:textSize="13sp"
                        android:textColor="@color/blackBoldLetters" />
                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/thirdDayNumDay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="4dp"
                                android:fontFamily="@font/inter_18pt_bold"
                                android:text="@string/sampleDay"
                                android:textColor="@color/lightGreyLetters"
                                android:textSize="15sp" />

                            <TextView
                                android:id="@+id/thirdDayMonth"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_18pt_bold"
                                android:text="@string/sampleMonth"
                                android:textColor="@color/lightGreyLetters"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/thirdOptionDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:text="@string/sampleDayMonday"
                            android:textSize="13sp"
                            android:textColor="@color/lightGreyLetters" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/timeHour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sampleHour"
                            android:textColor="@color/lightGreyLetters"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/textView176"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dash"
                            android:layout_marginHorizontal="4dp"
                            android:textColor="@color/lightGreyLetters"/>

                        <TextView
                            android:id="@+id/timeMinute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sampleMinute"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:textColor="@color/lightGreyLetters"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/timeAMPM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/timePM"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:textColor="@color/lightGreyLetters"
                            android:textSize="15sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/timeHour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sampleHour"
                            android:textColor="@color/blackBoldLetters"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:textSize="15sp"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/textView176"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dash"
                            android:layout_marginHorizontal="4dp"
                            android:textColor="@color/lightGreyLetters"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/timeMinute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sampleMinute"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:textColor="@color/blackBoldLetters"
                            android:textSize="15sp"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/timeAMPM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/timePM"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:textColor="@color/blackBoldLetters"
                            android:textSize="15sp"
                            tools:ignore="DuplicateIds"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/timeHour"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sampleHour"
                            android:textColor="@color/lightGreyLetters"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:textSize="15sp"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/textView176"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/dash"
                            android:layout_marginHorizontal="4dp"
                            android:textColor="@color/lightGreyLetters"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/timeMinute"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/sampleMinute"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:textColor="@color/lightGreyLetters"
                            android:textSize="15sp"
                            tools:ignore="DuplicateIds" />

                        <TextView
                            android:id="@+id/timeAMPM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:text="@string/timePM"
                            android:fontFamily="@font/inter_18pt_bold"
                            android:textColor="@color/lightGreyLetters"
                            android:textSize="15sp"
                            tools:ignore="DuplicateIds" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/save"
            android:background="@drawable/large_btn"
            android:textColor="@color/whiteBoldLetters"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>